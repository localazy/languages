{
  "upload": {
    "type": "js",
    "deprecateMissing": true,
    "filterSource": false,
    "files": [
      {
        "pattern": "src/data/translations/en.json",
        "lang": "inherited",
        "path": "${path}"
      },
      {
        "group": "all",
        "pattern": "src/data/translations/*.json",
        "excludes": ["src/data/translations/en.json"],
        "lang": "${autodetectLang}",
        "path": "${path}"
      }
    ]
  },

  "download": {
    "includeSourceLang": false,
    "files": "${path}/${lang}.json"
  }
}
